{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "paths": {
      "#terafy": ["./lib/terafy.client.ts"],
      "#utils/*": ["./utils/*.ts"]
    }
  },
  "include": [
    "lib/**/*.ts",
    "plugins/**/*.ts",
    "utils/**/*.ts",
    "widgets/**/*.ts"
   ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}